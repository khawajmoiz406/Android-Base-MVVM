    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="layout/item_popup_0"                                 xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/tvDrawerItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fontFamily="@font/segoe_ui"
            android:paddingVertical="@dimen/_13sdp"
            android:singleLine="true"
                                  
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Drawer Item"  android:tag="binding_1"/>

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_silver"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tag="binding_2"                   />

    </androidx.constraintlayout.widget.ConstraintLayout>
         