    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="layout/item_drawer_0"                                xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDrawerItem"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_marginVertical="@dimen/_12sdp"
            app:layout_constraintBottom_toTopOf="@+id/viewLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tag="binding_1"       
            tools:src="@drawable/ic_projects" />

        <TextView
            android:id="@+id/tvDrawerItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_18sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:ellipsize="marquee"
            android:fontFamily="@font/segoe_ui"
            android:singleLine="true"
            android:tag="binding_2"     
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="@+id/ivDrawerItem"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivDrawerItem"
            app:layout_constraintTop_toTopOf="@+id/ivDrawerItem"
            tools:text="Drawer Item" />

        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tag="binding_3"                   />

    </androidx.constraintlayout.widget.ConstraintLayout>
         