<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                 
                           
                                                                                            

                 
                            
                                                                                             
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark" android:tag="layout/fragment_update_profile_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <include
            android:id="@+id/include"
            layout="@layout/include_bg_landing"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivUser"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:tag="binding_1"              
                                                
            app:layout_constraintBottom_toTopOf="@+id/tvUserName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
                                             
            tools:background="@drawable/bg_dummy" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:ellipsize="marquee"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:singleLine="true"
            android:tag="binding_2"                 
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toTopOf="@+id/cvCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUser"
            app:layout_constraintWidth_default="wrap"
            tools:text="Andrew Jackson" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingVertical="@dimen/_20sdp"
            android:tag="binding_3"              
                                                
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
                                             
            tools:background="@drawable/bg_dummy">

            <TextView
                android:id="@+id/tvEmailHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/email"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="@+id/etEmail"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                style="@style/UpdateProfileEditTextStyle"
                android:hint="@string/enter_email_hint"
                android:inputType="textEmailAddress"
                android:tag="binding_4"                         
                                                     
                                                    
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEmailHeading"
                                                         
                                                 
                                                  />

            <TextView
                android:id="@+id/tvMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/mobile_phone"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="@+id/etMobilePhone"
                app:layout_constraintTop_toBottomOf="@+id/etEmail" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etMobilePhone"
                style="@style/UpdateProfileEditTextStyle"
                android:hint="@string/enter_mobile_number_hint"
                android:inputType="number"
                android:tag="binding_5"                               
                                                     
                                                    
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMobileNo"
                                                         
                                                 
                                                  />

            <TextView
                android:id="@+id/tvOfficeNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/segoe_ui"
                android:text="@string/office_no"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintStart_toStartOf="@+id/etMobilePhone"
                app:layout_constraintTop_toBottomOf="@+id/etMobilePhone" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOfficeNo"
                style="@style/UpdateProfileEditTextStyle"
                android:hint="@string/enter_office_number_hint"
                android:inputType="number"
                android:tag="binding_6"                               
                                                     
                                                    
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvOfficeNo"
                                                         
                                                 
                                                  />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/LoginButtonStyle"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:backgroundTint="@color/white"
                android:tag="binding_7"                         
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/logout"
                android:textColor="@color/border_silver"
                android:textSize="@dimen/_11ssp"
                app:cornerRadius="@dimen/_40sdp"
                app:layout_constraintEnd_toStartOf="@id/btnUpdate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etOfficeNo" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdate"
                style="@style/LoginButtonStyle"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:backgroundTint="@color/colorAccent"
                android:tag="binding_8"                           
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="@string/update"
                android:textSize="@dimen/_11ssp"
                app:cornerRadius="@dimen/_40sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnCancel"
                app:layout_constraintTop_toBottomOf="@id/etOfficeNo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         