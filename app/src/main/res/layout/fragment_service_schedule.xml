<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="com.centerpoint.connect.ui.global.service_schedule.ServicesFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:paddingHorizontal="@dimen/generic_padding_horizontal"
        android:paddingTop="@dimen/generic_padding_top"
        android:tag="@string/service_schedule">

        <RelativeLayout
            android:id="@+id/rlFilter"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_filter" />

        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="@dimen/_1sdp"
            android:background="@drawable/bg_dummy"
            android:drawableEnd="@drawable/ic_search"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center_vertical"
            android:hint="@string/search"
            android:paddingHorizontal="@dimen/_20sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/text_size_medium"
            app:backgroundColor="@{@color/colorPrimaryDark}"
            app:bottomCorners="@{@dimen/_20sdp}"
            app:layout_constraintBottom_toBottomOf="@id/rlFilter"
            app:layout_constraintEnd_toStartOf="@id/rlFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rlFilter"
            app:strokeColor="@{@color/card_grey}"
            app:strokeWidth="@{@dimen/_1sdp}"
            app:topCorners="@{@dimen/_20sdp}" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:textColor="@color/white"
            app:adapter="@{fragment.adapter}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlFilter"
            app:paginator="@{fragment}"
            tools:listitem="@layout/item_services" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>