<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.centerpoint.connect.models.helper.RepairTab.State" />

        <variable
            name="data"
            type="com.centerpoint.connect.models.helper.RepairTab" />

        <variable
            name="itemCount"
            type="Integer" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="listeners"
            type="com.centerpoint.connect.base.listeners.BaseAdapterListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="@{() ->  data.selectable ? listeners.onItemClick(position, data) : null}"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            android:tint="@{data.state == State.DISABLED ? @color/text_disable : @color/white}"
            app:backgroundColor="@{data.state == State.COMPLETED ? @color/orange : data.state == State.SELECTED ? @color/colorAccent : @color/color_disable_bg }"
            app:bottomCorners="@{@dimen/_16sdp}"
            app:setImageRes="@{data.imageRes}"
            app:topCorners="@{@dimen/_16sdp}"
            tools:background="@drawable/bg_dummy"
            tools:src="@drawable/ic_clock" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_16sdp"
            android:layout_marginTop="-4dp"
            android:src="@drawable/ic_tick_green"
            android:padding="@dimen/_2sdp"
            app:backgroundColor="@{@color/colorPrimary}"
            app:bottomCorners="@{@dimen/_8sdp}"
            app:strokeColor="@{@color/colorPrimary}"
            app:strokeWidth="@{@dimen/_2sdp}"
            app:topCorners="@{@dimen/_8sdp}"
            app:invisible="@{data.state != State.COMPLETED}" />

    </LinearLayout>

</layout>