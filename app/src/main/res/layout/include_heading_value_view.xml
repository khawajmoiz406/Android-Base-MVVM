<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="heading"
            type="String" />

        <variable
            name="value"
            type="String" />

        <variable
            name="valueColor"
            type="Integer" />

        <variable
            name="hideLine"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvDateHeading"
            style="@style/TicketInfoHeadingTextViewStyle.Black.Start"
            android:layout_marginTop="0dp"
            android:text="@{heading}"
            app:layout_constraintBottom_toBottomOf="@id/tvDateValue"
            app:layout_constraintEnd_toStartOf="@id/tvDateValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvDateValue"
            app:layout_constraintWidth_percent="@dimen/ticket_info_width_per"
            tools:text="Heading" />

        <TextView
            android:id="@+id/tvDateValue"
            style="@style/TicketInfoValueTextViewStyle.Blue.Start"
            android:layout_marginTop="@dimen/_5sdp"
            android:singleLine="false"
            android:text="@{value}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvDateHeading"
            app:layout_constraintTop_toTopOf="parent"
            app:textColor="@{valueColor == null ? @color/text_color_grey : valueColor}"
            tools:text="Value goes here"
            tools:textColor="@color/text_color_grey" />

        <View
            android:id="@+id/viewDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/border_silver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDateValue"
            app:visible="@{hideLine == null ? true : !hideLine}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>