<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvNoOne"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:gravity="center"
            android:text="@{title}"
            tools:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            app:backgroundColor="@{@color/colorAccent}"
            app:bottomCorners="@{@dimen/_14sdp}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:topCorners="@{@dimen/_14sdp}"
            tools:background="@drawable/bg_dummy"
            tools:backgroundTint="@color/colorAccent" />

        <View
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="@+id/tvNoOne"
            app:layout_constraintStart_toEndOf="@+id/tvNoOne"
            app:layout_constraintTop_toTopOf="@+id/tvNoOne" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>