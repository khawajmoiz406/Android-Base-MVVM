<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.centerpoint.connect.constants.ConstantsKt"/>

        <variable
            name="fragment"
            type="com.centerpoint.connect.ui.global.start_day.StartDayFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent">

        <RelativeLayout
            android:id="@+id/rlBack"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginStart="@dimen/generic_padding_horizontal"
            android:layout_marginTop="@dimen/generic_padding_top"
            android:onClick="@{() -> fragment.onBackPress()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_back" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:fontFamily="@font/segoe_ui"
            android:gravity="center"
            android:text="@{fragment.userData.attendance == ConstantsKt.CHECK_OUT ? @string/start_your_day : @string/end_your_day}"
            android:textColor="@color/white"
            android:textSize="@dimen/_18ssp"
            app:layout_constraintBottom_toTopOf="@+id/cvCard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cvCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingVertical="@dimen/_20sdp"
            app:backgroundColor="@{@color/white}"
            app:bottomCorners="@{@dimen/_20sdp}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvHeading"
            app:topCorners="@{@dimen/_20sdp}"
            tools:background="@drawable/bg_dummy">

            <TextView
                android:id="@+id/tvCostCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="@string/cost_code"
                android:textColor="@color/text_color_grey"
                android:textSize="@dimen/_9ssp"
                app:layout_constraintBottom_toTopOf="@id/dsvCostCode"
                app:layout_constraintStart_toStartOf="@id/dsvCostCode"
                app:layout_constraintTop_toTopOf="parent" />

            <com.centerpoint.connect.classes.drop_down_spinner.DialogSelectionView
                android:id="@+id/dsvCostCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_3sdp"
                app:auto_select_first="true"
                app:layout_constraintBottom_toTopOf="@+id/btnLogin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvCostCode"
                app:selection_hint="@string/select_cost_code"
                app:show_selection_hint="true" />

            <TextView
                android:id="@id/btnLogin"
                style="@style/LoginButtonStyle"
                android:onClick="@{() -> fragment.verifyFields()}"
                android:text="@{fragment.userData.attendance == ConstantsKt.CHECK_OUT ? @string/clock_in : @string/clock_out}"
                app:backgroundColor="@{@color/text_color_grey}"
                app:bottomCorners="@{@dimen/_40sdp}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dsvCostCode"
                app:topCorners="@{@dimen/_40sdp}" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>